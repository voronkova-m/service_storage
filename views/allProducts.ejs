<html>
<head>
    <meta charset="UTF-8">
    <title>Все продукты на складах</title>
</head>
<body>
<%- include ('blocks/header.ejs') -%>
<div class="block">
    <p><b>Все продукты на складах:</b></p>
    <% storages.forEach(function (storage) { %>
        <p> <b> Склад: <%= storage.nameStorage %> </b></p>
        <% storage.rack.forEach(function (rack) { %>
                <p> <b> Стеллаж: <%= rack.typeRack %> </b> </p>
            <table>
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Артикул</th>
                    <th>Тип</th>
                    <th>Наименование</th>
                    <th>Торговая марка</th>
                    <th>Количество</th>
                </tr>
                </thead>
                <tbody>
                <% rack.products.forEach(function(product) { %>
                    <tr>
                        <td><%= product._id %></td>
                        <td><%= product.article %></td>
                        <td><%= product.type %></td>
                        <td><%= product.name %></td>
                        <td><%= product.trademark %></td>
                        <td><%= product.countProduct %> </td>
                    </tr>
                <% }); %>
                </tbody>
            </table>
        <% })}); %>
</div>
</body>
</html>
